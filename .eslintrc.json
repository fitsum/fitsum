{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "array-bracket-spacing": [2, "always"],
        "computed-property-spacing": [2, "always"],
        "object-curly-spacing": [2, "always"],
        "template-curly-spacing": ["error", "always"],
        "space-in-parens": ["error", "always"]
    }
}
