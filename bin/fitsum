#!/usr/bin/env node

// prop
// - value
// - long name
// - template
// 	- single line
//  - full paragraph


var d = require('../data.json'),
	p = require('commander'),
	splash = require('../data.splash.gothic.json');


padder = function(count){
	for(i = 0; i < count; i++){
		console.log("");
	}
}


logger = function(command, param){


	//check for undefined param
	
	//for prosey outpout

	opts = {
		"undefined" : d[command],
		"string"    : d[command][param]
	};



	paramName = typeof d[command][param] == "object" ? Object.keys(d[command][param]).toString() : param;

	result = typeof opts[typeof param] == "object" ? opts[typeof param][Object.keys(opts[typeof param])].toString(): opts[typeof param]


	padder(2);
	console.log("Fitsum's", paramName, "is", result);
	padder(3);
}


p
 .command("vitals [sign]")
 .description("Show Fitsum's vital signs")
 .usage("Lists Fitsum's vital signs")
 .action(function(sign){
	logger("vitals", sign);
 })

p
 .command("bio [entry]")
 .description("Show Fitsum's biographical information")
 .usage("Lists Fitsum's biographical information")
 .action(function(entry){
		logger("bio", entry);
	})

p
 .command("cv")
 .description("Show Fitsum's curriculum vitae")
 .usage("Lists Fitsum's curriculum vitae")
 .action(function(){
		//console.log("cv:", d.cv);
	})



splash.data.forEach(function(e, i, a){
	console.log(e);
});


p.parse(process.argv);

if(p.args.length < 1){
  p.help()
}


